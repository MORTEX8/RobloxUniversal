-- This script modifies the HumanoidRootPart and Head of other players in the game.

local Players = game:GetService("Players")
local RunService = game:GetService("RunService")

-- Player Info (these are global variables for configuration)
_G.Disabled = true -- Set to 'true' to enable the script's effects, 'false' to disable.

-- Configuration for HumanoidRootPart size
_G.HumanoidRootPartSizeX = 2
_G.HumanoidRootPartSizeY = 3
_G.HumanoidRootPartSizeZ = 2

-- Configuration for Head size
-- You can change these values to adjust the head's dimensions
_G.HeadPartSizeX = 2
_G.HeadPartSizeY = 2
_G.HeadPartSizeZ = 2

-- This section runs every frame to continuously apply the changes.
RunService.RenderStepped:Connect(function()
    -- Check if the script is enabled via the _G.Disabled variable.
    if _G.Disabled then
        -- Loop through all players currently in the game.
        for _, player in ipairs(Players:GetPlayers()) do
            -- Ensure we don't modify the local player's own character.
            if player.Name ~= Players.LocalPlayer.Name then
                -- Use pcall to safely attempt modifications, preventing script errors if a character isn't ready.
                pcall(function()
                    local character = player.Character
                    -- Check if the character exists before trying to access its parts.
                    if character then
                        -- *** Modify HumanoidRootPart ***
                        local humanoidRootPart = character:FindFirstChild("HumanoidRootPart")
                        if humanoidRootPart then
                            -- Set the size of the HumanoidRootPart using the configured global variables.
                            humanoidRootPart.Size = Vector3.new(_G.HumanoidRootPartSizeX, _G.HumanoidRootPartSizeY, _G.HumanoidRootPartSizeZ)
                            -- Set the transparency of the HumanoidRootPart.
                            humanoidRootPart.Transparency = 0.7
                            -- Set the color of the HumanoidRootPart to "Really blue".
                            humanoidRootPart.BrickColor = BrickColor.new("Really blue")
                            -- Set the material of the HumanoidRootPart to "Neon".
                            humanoidRootPart.Material = Enum.Material.Neon
                            -- Make the HumanoidRootPart non-collidable so players can walk through it.
                            humanoidRootPart.CanCollide = false
                        end

                        -- *** Modify Head ***
                        local head = character:FindFirstChild("Head")
                        if head then
                            -- Set the size of the Head using the configured global variables.
                            head.Size = Vector3.new(_G.HeadPartSizeX, _G.HeadPartSizeY, _G.HeadPartSizeZ)
                            -- Set the transparency of the Head.
                            head.Transparency = 0.1
                            -- Set the color of the Head to "Really blue".
                            head.BrickColor = BrickColor.new("Really blue")
                            -- Set the material of the Head to "Neon".
                            head.Material = Enum.Material.Neon
                            -- Make the Head non-collidable (optional, but consistent with HumanoidRootPart).
                            head.CanCollide = false
                        end
                    end
                end)
            end
        end
    end
end)

print("Simplified HumanoidRootPart and Head Modifier Script loaded.")
